// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  uuid     String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  document String  @unique
  logo     String?

  zipcode    String?
  state      String?
  city       String?
  street     String?
  number     String?
  district   String?
  complement String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  Product    Product[]
}

model Product {
  uuid        String  @id @default(uuid())
  name        String
  description String
  value       Int
  quantity    Int
  logo        String?


  company_uuid String
  company      Company @relation(fields: [company_uuid], references: [uuid])

  created_at DateTime @default(now())
  updated_at DateTime  @default(now())
}
