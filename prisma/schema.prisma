// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  uuid     String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  document String  @unique
  type     Type
  logo     String?

  recovery_code String?
  recovery_date DateTime @default(now())

  zipcode    String?
  state      String?
  city       String?
  street     String?
  number     String?
  district   String?
  complement String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  Product    Product[]
  Post       Post[]
}

model Customer {
  uuid        String  @id @default(uuid())
  name        String
  email       String  @unique
  password    String
  document    String  @unique
  type        Type
  profile_pic String?

  recovery_code String?
  recovery_date DateTime @default(now())

  zipcode    String?
  state      String?
  city       String?
  street     String?
  number     String?
  district   String?
  complement String?

  created_at DateTime    @default(now())
  updated_at DateTime    @default(now())
  PostLikes  PostLikes[]
}

model Product {
  uuid        String  @id @default(uuid())
  name        String
  description String
  value       Int
  quantity    Int
  logo        String?


  company_uuid String
  company      Company @relation(fields: [company_uuid], references: [uuid])

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Post {
  uuid        String  @id @default(uuid())
  content     String
  author_name String
  media_url   String?
  likes       Int

  company_uuid String
  company      Company @relation(fields: [company_uuid], references: [uuid])

  created_at DateTime    @default(now())
  updated_at DateTime    @default(now())
  PostLikes  PostLikes[]
}

model PostLikes {
  uuid String @id @default(uuid())

  customer_uuid String
  customer      Customer @relation(fields: [customer_uuid], references: [uuid])

  post_uuid String
  post      Post   @relation(fields: [post_uuid], references: [uuid])

}

enum Type {
  COMPANY
  CUSTOMER
}
